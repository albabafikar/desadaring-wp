{include $element->common('header')}

<div id="{$htmlId}" class="{$htmlClass}">

	{var $categories = $wp->categories(array('taxonomy' => 'ait-items', 'hide_empty' => 0))}
	{var $locations = $wp->categories(array('taxonomy' => 'ait-locations', 'hide_empty' => 0))}
	{var $resources = wp_count_posts( 'ait-item' )->publish}
	{if defined('AIT_REVIEWS_ENABLED')}
		{var $reviews = wp_count_posts( 'ait-review' )->publish}
	{/if}

	<span class="info-icon"><i class="fa fa-folder-open-o"></i></span>
	<span class="info-categories">
		<span class="info-count">{count($categories)}</span>
		<span class="info-text">{__ 'Kategori'}</span>
	</span>
	<span class="info-locations">
		<span class="info-count">{count($locations)}</span>
		<span class="info-text">{__ 'Daerah'}</span>
	</span>
	<span class="info-resources">
			<span class="info-count">{$resources}</span>
		<span class="info-text">{__ 'Produk'}</span>
	</span>
	{if defined('AIT_REVIEWS_ENABLED')}
	<span class="info-reviews">
		<span class="info-count">{$reviews}</span>
		<span class="info-text">{__ 'Testimoni'}</span>
	</span>
	{/if}

</div>

{includePart "ait-theme/elements/items-info/javascript"}